$('#cart').html('<%= escape_javascript(render(@cart)) %>');

<% if @cart.total_items == 1 %>
  $('#cart').slideDown("slow");
<% end %>

$("#current_item").hide().fadeIn("slow");

// This tests for the existence of the element with id 'notice' - length will return false or zero if it doesn't exist. Trying to hid a non-existent element would cause a crash
if ($('#notice').length) {
	$('#notice').hide();
}
