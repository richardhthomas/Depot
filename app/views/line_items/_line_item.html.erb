<% if line_item == @current_item %>
	<tr id="current_item">
<% else %>
	<tr>
<% end %>
		<td><%= line_item.quantity %>&times;</td>
		<td><%= line_item.product.title %></td>
		<td class="item_price" ><%= number_to_currency(line_item.total_price) %></td>
		<td><%= button_to 'Remove', decrement_line_item_path(:id => line_item.id), :remote => :true %></td>
		<!-- This was the AJAX delete button
		<td><%= button_to 'Delete item', line_item, :method => :delete, :remote => :true %></td>
		-->
	</tr>