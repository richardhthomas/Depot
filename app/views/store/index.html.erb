<% if notice %>
<p id="notice" ><%= notice %></p>
<% end %>

<h1>Your Pragmatic Catalog</h1>

<% if @counter>5 %>
<p>You have accessed this catalogue <%= pluralize(@counter, "time")%></p>
<% end %>

<% @products.each do |product| %>	
	<div class="entry" >
		<%= link_to(image_tag(product.image_url), line_items_path(:product_id => product.id), method: :post) %>
		<h3><%= product.title %></h3>
		<%=sanitize product.description %>
		<div class="price_line" >
			<span class="price" ><%= number_to_currency(product.price, unit: 'Â£') %></span>
			<%= button_to 'Add to cart', line_items_path(:product_id => product.id) %>
		</div>
	</div>
<% end %>